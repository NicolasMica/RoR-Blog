<div class="card overflow-hidden">
  <a href="<%= post_path(post) %>">
    <div class="max-w-full max-h-48">
      <img src="<%= post.image.thumb %>" alt="<%= post.name %>" class="image">
    </div>
  </a>
  <div class="flex flex-col flex-1 p-4">
    <h2 class="mb-4 text-xl font-medium">
      <a href="<%= post_path(post) %>" class="text-grey-darker hover:text-teal"><%= post.name %></a>
    </h2>
    <p class="mb-4"><%= post.heading %></p>
    <p class="mb-4 text-sm text-grey-dark hover:text-teal">&mdash; <a href="<%= user_path(post.user) %>"><%= post.user.fullname %></a></p>
    <div class="flex flex-wrap mt-auto">
      <span class=" mb-2 sm:mb-0 text-grey-dark">PubliÃ© le <%= post.created_at.strftime('%d/%m/%Y') %></span>
      <a href="<%= post_path(post) %>" class="mx-auto sm:mr-0 p-1 text-teal hover:underline">Lire la suite</a>
    </div>
  </div>
</div>