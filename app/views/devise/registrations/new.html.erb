<div class="px-8 py-16">
  <div class="container mx-auto">
    <div class="flex justify-center items-center">
      <div class="w-full md:w-1/2">
        <!-- LOGIN CARD -->
        <div class="card p-4">
          <h2 class="mb-4 text-base font-normal uppercase tracking-wide text-grey-darker">Inscription</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="mb-4">
              <%= f.label :firstname, class: 'label' %>
              <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: 'input', placeholder: 'John' %>
            </div>

            <div class="mb-4">
              <%= f.label :lastname, class: 'label' %>
              <%= f.text_field :lastname, autocomplete: "lastname", class: 'input', placeholder: 'Doe' %>
            </div>

            <div class="mb-4">
              <%= f.label :email, class: 'label' %>
              <%= f.email_field :email, autocomplete: "email", class: 'input', placeholder: 'john@doe.com' %>
            </div>

            <div class="mb-4">
              <%= f.label :password, class: 'label' %>
              <%= f.password_field :password, autocomplete: "off", class: 'input', placeholder: '******' %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, class: 'label' %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input', placeholder: '******' %>
            </div>

            <div class="flex items-center">
              <%= f.submit "Inscription", class: 'button is-blue ml-auto' %>
            </div>
          <% end %>
        </div>
        <!-- DIVIDER -->
        <div class="flex items-center justify-center my-8 h-px w-full text-center bg-grey-light">
          <span class="p-4 uppercase text-sm text-grey-darker bg-grey-lighter">ou</span>
        </div>
        <!-- REGISTER -->
        <%= link_to 'Connexion', new_user_session_path, class: 'button is-teal uppercase tracking-wide' %>
      </div>
    </div>
  </div>
</div>